@model Booking

<h2>Delete booking</h2>
<hr />

@if (ViewData["ErrorMessage"] != null)
{
    <p class="text-danger">@ViewData["ErrorMessage"]</p>
}

<div>
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="CarModel"></label>
        </dt>
        <dd class="col-sm-10">
            @Model?.CarModel
        </dd>
        <dt class="col-sm-2">
            <label asp-for="StartDate"></label>
        </dt>
        <dd class="col-sm-10">
            @Model?.StartDate
        </dd>
    </dl>
    <dt class="col-sm-2">
        <label asp-for="EndDate"></label>
    </dt>
    <dd class="col-sm-10">
        @Model?.EndDate
    </dd>
</div>

<form method="post" asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CarId" />
    <input type="submit" value="Delete booking" class="btn btn-danger" onclick="javascript: return confirm('Are you sure you want to delete this booking?');" />
</form>

<div>
    <a asp-controller="Booking" asp-action="Index">Back to list</a>
</div>